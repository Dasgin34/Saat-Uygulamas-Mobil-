<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZamanlayiciActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/hourEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:allowUndo="false"
            android:hint="Saat"
            android:inputType="number"
            android:rotationX="0" />

        <EditText
            android:id="@+id/minuteEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hourEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:hint="Dakika"
            android:inputType="number" />

        <EditText
            android:id="@+id/secondEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minuteEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:hint="Saniye"
            android:inputType="number" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:text="Başlat" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondEditText"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="22dp"
            android:layout_toStartOf="@id/startButton"
            android:text="Durdur"
            android:visibility="visible" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondEditText"
            android:layout_marginStart="21dp"
            android:layout_marginTop="66dp"
            android:layout_toEndOf="@id/startButton"
            android:text="Sıfırla"
            android:visibility="visible" />

        <TextView
            android:id="@+id/countdownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="00:00:00"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="128dp"
            android:text="ZAMANLAYICI"
            android:textSize="24sp" />
    </RelativeLayout>

</FrameLayout>
